<% provide :title, t("users.registrations.new.sign_up") %>
<div class="signup-content">
  <div id="login-container" class="animation-fadeIn">
    <div class="login-title text-center">
      <h1>
        <strong><%= t "users.registrations.new.title" %></strong><br>
        <small>
          <%= t "users.registrations.new.remind" %>
        </small>
      </h1>
    </div>
    <div class="block push-bit">
      <%= form_for resource, as: resource_name,
        url: registration_path(resource_name),
        html: {role: "form" ,class: "form-horizontal form-bordered
          form-control-borderless"} do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <div class="col-xs-12">
            <div class="input-group">
              <span class="input-group-addon"><i class="gi gi-user"></i></span>
              <%= f.text_field :name, autofocus: true,
                class: "form-control input-lg",
                placeholder: t("users.registrations.new.name") %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="col-xs-12">
            <div class="input-group">
              <span class="input-group-addon">
                <i class="gi gi-envelope"></i>
              </span>
              <%= f.email_field :email, autofocus: true,
                class: "form-control input-lg",
                placeholder: t("users.registrations.new.email") %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="col-xs-12">
            <div class="input-group">
              <span class="input-group-addon">
                <i class="gi gi-asterisk"></i>
              </span>
              <%= f.password_field :password,
                autocomplete: "off",class: "form-control input-lg",
                placeholder: t("users.registrations.new.password") %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="col-xs-12">
            <div class="input-group">
              <span class="input-group-addon">
                <i class="gi gi-asterisk"></i>
              </span>
              <%= f.password_field :password_confirmation,
                autocomplete: "off", class: "form-control input-lg",
                placeholder: t("users.registrations.new.confirm_pass") %>
            </div>
          </div>
        </div>
        <div class="form-group form-actions">
          <div class="col-xs-12 text-right">
            <%= f.submit t("users.registrations.new.sign_up"),
              class: "btn btn-sm btn-success" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-xs-12 text-center">
            <small><%= t "users.registrations.new.have_account" %></small>
            <%= link_to t("users.registrations.new.login"),
              new_session_path(resource_name), data: {turbolinks: false} %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
